{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "lint:ci": "eslint . --format json --output-file eslint-report.json --max-warnings=-1",
    "dev": "bun run --hot src/index.ts",
    "start": "bun run dist/index.js"
  },
  "dependencies": {
    "elysia": "catalog:",
    "@elysiajs/cors": "^1.3.3",
    "@orpc/server": "catalog:",
    "@orpc/openapi": "catalog:",
    "@orpc/zod": "catalog:",
    "better-auth": "catalog:",
    "dotenv": "catalog:",
    "zod": "catalog:",
    "@vitaes/api": "workspace:*",
    "@vitaes/auth": "workspace:*",
    "@vitaes/db": "workspace:*"
  },
  "devDependencies": {
    "@types/bun": "^1.2.6",
    "@vitaes/eslint-config": "workspace:*",
    "@vitaes/typescript-config": "workspace:*",
    "eslint": "^9.38.0",
    "tsdown": "catalog:",
    "typescript": "catalog:"
  }
}
